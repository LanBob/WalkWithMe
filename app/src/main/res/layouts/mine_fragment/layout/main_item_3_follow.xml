<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/y10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.app.view.CircleImageView
        android:id="@+id/main_item_3_follow_headImage"
        android:layout_marginLeft="@dimen/x10"
        android:layout_alignParentLeft="true"
        android:src="@drawable/home_nine_humanity"
        android:layout_marginTop="@dimen/y5"
        android:layout_width="@dimen/y90"
        android:layout_height="@dimen/y90" />

    <TextView
        android:textColor="@color/black"
        android:text="user name"
        android:textSize="16sp"
        android:id="@+id/main_item_3_follow_userName"
        android:layout_toRightOf="@id/main_item_3_follow_headImage"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginTop="@dimen/y10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/main_item_3_follow_headImage"
        android:layout_below="@id/main_item_3_follow_userName"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginLeft="@dimen/x50"
        android:textSize="15sp"
        android:text="title of the pasage"
        android:id="@+id/main_item_3_follow_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
