<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y290"
        android:background="@drawable/textview_border">

        <com.app.view.CircleImageView
            android:id="@+id/defaultImage"
            android:layout_width="@dimen/y250"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x50"
            android:src="@drawable/chat_girl" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x19"
            android:layout_toRightOf="@id/defaultImage"
            android:text="lusr"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x19"
            android:layout_toRightOf="@id/defaultImage"
            android:text="发布时间:" />


        <TextView
            android:id="@+id/mytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x19"
            android:layout_toRightOf="@id/age"
            android:text="2019-03-02 15:31:20" />

        <TextView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mytime"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/defaultImage"
            android:text="状态:" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mytime"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/s"
            android:text="导游验证完成" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x19"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:text="设置评分: "
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/score"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x90"
            android:background="@drawable/pink_editext_border" />

        <Button
            android:id="@+id/scoreButtom"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x90"
            android:background="#00eedd"
            android:text="提交"
            android:textSize="19sp" />

    </LinearLayout>
</LinearLayout>
