<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_nine_healthcare"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="登录界面"
        android:textSize="19sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x120"
        android:layout_marginRight="@dimen/x10"
        android:background="#00000000">

        <ImageView
            android:id="@+id/img_account__"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y50"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:scaleType="fitXY"
            android:src="@drawable/server_" />

        <EditText
            android:id="@+id/et_account__"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:layout_toRightOf="@+id/img_account__"
            android:background="@null"
            android:hint="account"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="#a8a8cf"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/img_account__"
            android:background="#797cab" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10">

        <ImageView
            android:id="@+id/img_pw__"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x50"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:scaleType="fitXY"
            android:src="@drawable/tab_home" />

        <EditText
            android:id="@+id/et_password__"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:layout_toRightOf="@+id/img_pw__"
            android:background="@null"
            android:hint="password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="#9797ba"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_see_password__"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/_server" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/img_pw__"
            android:background="#e1dada" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginRight="@dimen/x10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x5"
        android:paddingBottom="@dimen/x5">

        <CheckBox
            android:id="@+id/checkBox_password__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="false"
            android:padding="@dimen/x10"
            android:text="记住密码"
            android:textColor="#00eeaa"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBox_login__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="false"
            android:padding="@dimen/x10"
            android:text="自动登录"
            android:textColor="#aa00ff"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login__"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginRight="@dimen/x10"
        android:background="#33365e"
        android:paddingTop="@dimen/x5"
        android:paddingBottom="@dimen/x5"
        android:text="login"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forget__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？" />

        <TextView
            android:layout_marginLeft="@dimen/x20"
            android:id="@+id/add_count__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册账号" />
    </LinearLayout>


</LinearLayout>
