<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7d5e1"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#667374">

        <TextView
            android:id="@+id/message_msg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/back"
            android:gravity="center"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lt_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lt_main_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/down"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_msg_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/msg_input_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:hint="say something"
            android:maxLines="2" />

        <Button
            android:id="@+id/message_add"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/x3"
            android:background="@drawable/message_add" />

        <Button
            android:id="@+id/msg_send"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:background="@drawable/message_send" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_add_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x15"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x40"
            card_view:cardCornerRadius="@dimen/x10">

            <ImageButton
                android:id="@+id/message_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_image" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x40"
            card_view:cardCornerRadius="@dimen/x10">

            <ImageButton
                android:id="@+id/message_position_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/messaeg_position" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>

