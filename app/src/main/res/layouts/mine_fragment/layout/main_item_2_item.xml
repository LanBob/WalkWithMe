<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFE6E7"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y200"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/x30">

    <RelativeLayout
        android:layout_margin="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_item_2_item_iamgeview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/home_nine_humanity" />
        <TextView
            android:layout_marginLeft="@dimen/x50"
            android:textSize="16sp"
            android:layout_toRightOf="@id/main_item_2_item_iamgeview"
            android:id="@+id/main_item_2_item_title"
            android:text="XX欢迎你"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/main_item_2_item_iamgeview"
            android:layout_below="@id/main_item_2_item_title"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/x30"
            android:text="广州"
            android:id="@+id/main_item_2_item_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:text="50¥"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:id="@+id/main_item_2_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@id/main_item_2_item_money"
            android:text="未完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
