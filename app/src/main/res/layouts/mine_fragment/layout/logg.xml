<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_nine_healthcare"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:gravity="center"
        android:textColor="#4DF7E0"
        android:text="登录界面"
        android:textSize="19sp" />
    <!--新加入的-->
    <FrameLayout
        android:id="@+id/login_layout_"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y550"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/background_corner"
        android:layout_gravity="center">
        <!--750dp * 1130-->
        <EditText
            android:id="@+id/et_account_"
            android:layout_width="@dimen/x450"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y40"
            android:hint="Username"/>

        <EditText
            android:id="@+id/et_password_"
            android:layout_width="@dimen/x450"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/y130"
            android:hint="Password"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y200"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/x5"
            android:paddingBottom="@dimen/x5">

            <CheckBox
                android:id="@+id/checkBox_password_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="false"
                android:layout_marginLeft="@dimen/x80"
                android:text="记住密码"
                android:textColor="#00eeaa"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/checkBox_login_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="false"
                android:text="自动登录"
                android:textColor="#aa00ff"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:layout_marginTop="@dimen/y260"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forget_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？" />

            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:id="@+id/add_count_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="注册账号" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login_"
            android:layout_width="@dimen/y300"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginBottom="@dimen/y20"
            android:layout_gravity="bottom|center_horizontal"/>

    </FrameLayout>




</LinearLayout>