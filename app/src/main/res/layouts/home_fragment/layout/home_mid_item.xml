<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y15"
    android:layout_marginBottom="@dimen/x30"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:background="@drawable/corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_mid_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y400"
            android:adjustViewBounds="true"
            android:src="@drawable/home_nine_explore" />

        <TextView
            android:id="@+id/home_mid_money"
            android:layout_below="@id/home_mid_image"
            android:text="¥ 10"
            android:textColor="#C52646"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/title"
            android:layout_below="@id/home_mid_money"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:padding="@dimen/x5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70">
            <!-- title -->
            <TextView
                android:textSize="16sp"
                android:id="@+id/home_mid_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@id/home_mid_money"
                android:layout_below="@id/find_item_default_image"
                android:text="Introduce" />

        </LinearLayout>

        <TextView
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="广州"
            android:textColor="#869795"
            android:layout_below="@id/title"
            android:id="@+id/home_mid_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--private int star;-->
        <ImageView
            android:id="@+id/home_star"
            android:layout_below="@id/title"
            android:layout_toLeftOf="@id/home_mid_star"
            android:src="@drawable/unstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_below="@id/title"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:id="@+id/home_mid_star"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
