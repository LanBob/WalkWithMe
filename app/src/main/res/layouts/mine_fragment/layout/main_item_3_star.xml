<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_item_3_star_imageView"
        android:src="@drawable/chat_girl"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="@dimen/y180"
        android:layout_height="@dimen/y180" />

    <TextView
        android:id="@+id/main_item_3_star_position"
        android:layout_toRightOf="@id/main_item_3_star_imageView"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:text="北京先到"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/main_item_3_star_title"
        android:layout_toRightOf="@id/main_item_3_star_imageView"
        android:layout_below="@id/main_item_3_star_position"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x50"
        android:textColor="@color/black"
        android:text="标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/main_item_3_star_money"
        android:layout_toRightOf="@id/main_item_3_star_imageView"
        android:layout_below="@id/main_item_3_star_title"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:text="¥  10"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
