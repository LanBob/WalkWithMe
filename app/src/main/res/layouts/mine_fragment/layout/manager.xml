<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:text="请输入管理员密码:"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/passWord"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_marginRight="@dimen/x60"
                    android:background="@drawable/pink_editext_border"
                    android:password="true" />

                <Button
                    android:id="@+id/checkPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_marginTop="@dimen/y30"
                    android:layout_marginRight="@dimen/x60"
                    android:background="#E77DC4"
                    android:text="验证"
                    android:textSize="19sp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/isGoodMan"
                    android:layout_marginTop="@dimen/x60"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_marginRight="@dimen/x60"
                    app:cardCornerRadius="@dimen/x19"
                    app:cardBackgroundColor="#CB4ED8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x190">
                    <TextView
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="导游个人验证模块"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/managerNeededScore"
                    android:layout_marginTop="@dimen/x60"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_marginRight="@dimen/x60"
                    app:cardCornerRadius="@dimen/x19"
                    app:cardBackgroundColor="#CB4ED8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x190">
                    <TextView
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="当地导游申请模块"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
