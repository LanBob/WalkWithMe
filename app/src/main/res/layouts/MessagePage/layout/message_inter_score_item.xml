<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/textview_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y190">

        <com.app.view.CircleImageView
            android:id="@+id/defaultImage"
            android:layout_marginLeft="@dimen/x60"
            android:src="@drawable/chat_girl"
            android:layout_width="@dimen/y190"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/title"
            android:layout_toRightOf="@id/defaultImage"
            android:layout_marginTop="@dimen/x19"
            android:layout_marginLeft="@dimen/x60"
            android:text="lusr"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/age"
            android:layout_below="@id/title"
            android:text="发布时间:"
            android:layout_toRightOf="@id/defaultImage"
            android:layout_marginTop="@dimen/x19"
            android:layout_marginLeft="@dimen/x40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/mytime"
            android:layout_below="@id/title"
            android:text="2019-03-02 15:31:20"
            android:layout_toRightOf="@id/age"
            android:layout_marginTop="@dimen/x19"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/s"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/defaultImage"
            android:layout_below="@id/mytime"
            android:text="状态:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/s"
            android:layout_below="@id/mytime"
            android:id="@+id/state"
            android:text="导游验证完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x19"
        android:paddingBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_marginLeft="@dimen/x60"
            android:textColor="@color/black"
            android:text="设置评分: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/pink_editext_border"
            android:id="@+id/score"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x90" />

        <Button
            android:background="#00eedd"
            android:textSize="19sp"
            android:text="提交"
            android:id="@+id/scoreButtom"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x90" />

    </LinearLayout>
</LinearLayout>
