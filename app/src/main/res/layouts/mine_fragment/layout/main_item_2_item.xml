<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8DDFE9"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/x30">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x5">

        <ImageView
            android:id="@+id/main_item_2_item_iamgeview"
            android:layout_width="@dimen/x400"
            android:layout_height="@dimen/x300"
            android:adjustViewBounds="true"
            android:src="@drawable/home_nine_humanity" />

        <TextView
            android:id="@+id/main_item_2_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@id/main_item_2_item_iamgeview"
            android:text="XX欢迎你"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_item_2_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_item_2_item_title"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x30"
            android:layout_toRightOf="@id/main_item_2_item_iamgeview"
            android:text="状态: 未完成导游验证" />

        <TextView
            android:id="@+id/s"
            android:layout_below="@id/main_item_2_item_state"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@id/main_item_2_item_iamgeview"
            android:text="发布时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/s"
            android:layout_below="@id/main_item_2_item_state"
            android:text="2019-03-02 15:31:20"
            android:id="@+id/mytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_item_2_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@id/mytime"
            android:layout_toRightOf="@id/main_item_2_item_iamgeview"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:text="¥ 50"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_below="@id/main_item_2_item_iamgeview"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="#00eedd"
                android:textSize="17sp"
                android:text="删除此导向"
                android:id="@+id/delete"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x50"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90" />
            <Button
                android:background="#00eedd"
                android:textSize="17sp"
                android:text="预览"
                android:id="@+id/show"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x50"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"  />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
