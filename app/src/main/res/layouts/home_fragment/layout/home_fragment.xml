<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ededed"
                android:orientation="vertical">

                <!--this is Banner-->
                <!--顶部背景-->
                <ImageView
                    android:id="@+id/home_backgroud"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/home_backgroud" />

                <!--搜索框-->
                <android.support.v7.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="@dimen/x700"
                    android:layout_height="@dimen/x60"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginTop="@dimen/x16"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@mipmap/searchview"
                    android:focusable="false"
                    android:gravity="center"
                    android:searchIcon="@drawable/search"
                    app:iconifiedByDefault="false"
                    app:queryHint="输入关键字" />
                <!--图标-->
                <ImageView
                    android:id="@+id/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/x11"
                    android:layout_marginTop="@dimen/x23"
                    android:src="@mipmap/down" />
                <!--轮播图-->
                <com.app.view.Home_Banner_LoopViewPager
                    android:id="@+id/loopviewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_below="@id/home_backgroud"
                    android:background="@color/white" />

                <!--这里放置九宫格-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_nine_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loopviewPager"
                    android:background="#fbfcfd" />

                <!--发现精选-->
                <TextView
                    android:id="@+id/no_use_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_nine_recyclerview"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x50"
                    android:layout_marginBottom="@dimen/x30"
                    android:background="#ededed"
                    android:text="发现精选"
                    android:textSize="20sp" />

                <!--中间大张页面的推荐-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_everyday_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x260"
                    android:layout_below="@id/no_use_text"
                    android:layout_marginTop="@dimen/x10"
                    android:background="#efeffe" />

                <TextView
                    android:id="@+id/no_use_too"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_everyday_recyclerview"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x50"
                    android:layout_marginBottom="@dimen/x30"
                    android:text="精选向导"
                    android:textSize="20sp" />


                <!--中间横向的推荐-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_mid_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/no_use_too"
                    android:background="#efeffe" />

            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>